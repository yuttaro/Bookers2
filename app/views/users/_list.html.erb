<h2>User info</h2>
<div>
  <%= image_tag user.get_profile_image(100,100) %>
  <table class="table">
    <tr></tr>
    <tbody></tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>Introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <%= link_to edit_user_path(user.id), class:"btn btn-outline-secondary btn-block" do %>
  <i class="fa-solid fa-user-gear"></i>
  <% end %>
</div>